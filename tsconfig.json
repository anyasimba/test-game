{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
        },
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "experimentalDecorators": true,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ],
}
